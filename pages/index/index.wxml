<!--index.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
  <view class="usermotto">
    <text catchtap="clickChange" class="{{color}}">click me to change</text>
  </view>
  <view class="body">
  <view class="bodytitle">wp-list-news</view>
  <view class="alllist" wx:for="{{list}}" wx:key="*this" style="display: block;">
    <view id="{{index}}" class="item" bindtap="tapTitle">{{item.title.rendered}}</view>
    <!-- <view class="item">{{item.excerpt.rendered}}</view> -->
  </view>
  </view>
</view>
